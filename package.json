    "@types/md5": "^2.3.2",
    "@types/mocha": "^9.1.1",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^8.18.0",
    "mocha": "^10.0.0",
