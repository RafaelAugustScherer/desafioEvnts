  "main": "build/server.js",
  "scripts": {
    "build": "npx -y tsc",
    "dev": "ts-node-dev src/server --watch src/app",
    "dev:docker": "docker-compose -f ./docker/docker-compose.dev.yml up --build",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node .",
    "start:database": "",
    "start:docker": "docker build -t uaifood-api -f ./docker/Dockerfile . && docker run -it -p 3001:3001 --name uaifood-api-prod --rm uaifood-api",
    "pretest": "docker-compose -f ./docker/docker-compose.test.yml down && docker-compose -f ./docker/docker-compose.test.yml up -d",
    "test": "mocha -r ts-node/register -r mocha-suppress-logs src/test/*.test.ts --exit",
    "posttest": "docker-compose -f ./docker/docker-compose.test.yml down"
  },
